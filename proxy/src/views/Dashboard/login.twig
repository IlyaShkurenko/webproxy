{% extends 'frontend.twig' %}

{% block content %}
<!-- END HEADER-->
<div class="container" style="margin-top: 60px;padding: 1em;">

    <div class="text-center" style="margin:1em;">			
        <a href="#" class="settings-ctrl btn btn-default btn-lg">Login</a>
    </div>			

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title text-center">Login</div>
        </div>
        <div class="panel-wrapper">
            <div class="panel-body">
                Login
            </div>
        </div>
        {% if error is defined and error is not empty %}
            <div class="panel-wrapper">
                <div class="panel-body">
                    {{ error }}
                </div>
            </div>
        {% endif %}
    </div>
    
    <div class="text-center" style="margin:1em;">			
        <a href="#" class="settings-ctrl btn btn-default btn-lg">Login</a>
    </div>
</div>
<!-- START FOOTER-->
<footer id="footer">
  <div class="container">
     <div class="row">
        <div class="col-sm-6">
           <ul class="footer-nav">
              <li>
                <a href="#header" class="scrollto">Home</a>
              </li>
           </ul>
        </div>
        <div class="col-sm-6">
           <!-- COPYRIGHT-->
           <p class="copyright">Blazing SEO LLC &copy; {{ '' | date('Y') }}</p>
        </div>
     </div>
  </div>
</footer>
<!-- END FOOTER-->
<!-- START SETTINGS-->
<div class="settings">
    <div class="settings-inner">
        <div class="settings-ctrl">
            <em class="fa fa-cogs"></em>
        </div>
        <div class="settings-content">
            <p>Control Panel</p>
            <form method="POST" action="{{ AM_LOGIN_URL }}">
                <div class="form-group">
                    <label for="form-amember_login">Email address Or Username</label>
                    <input type="text" name="amember_login" placeholder="Enter email" class="form-control" autocomplete="off" id="form-amember_login">
                </div>
                <div class="form-group">
                    <label for="form-amember_pass">Password</label>
                    <input type="password" name="amember_pass" placeholder="Password" id="form-amember_pass" class="form-control" autocomplete="off">
                </div>
                <input type="hidden" name="amember_redirect_url" value="{{ url('dashboard') }}" />
                <input type="submit" value="Login" class="btn btn-sm btn-default">
            </form>
        </div>
    </div>
</div>
{% endblock %}