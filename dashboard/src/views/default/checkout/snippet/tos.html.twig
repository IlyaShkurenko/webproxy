{% if noSpaceBefore is not defined and
    (CONFIG_VIEW.link.checkout.tos or CONFIG_VIEW.link.checkout.no_refund ) %}
    <br>
{% endif %}
{% if CONFIG_VIEW.link.checkout.tos %}
<div class="checkbox checkbox-primary checkbox-lg">
    <input type="checkbox" id="checkbox-tos" required />
    <label for="checkbox-tos">
        I have read and agree to the
        <a href="{{ CONFIG_VIEW.link.checkout.tos }}" target="_blank">Terms of Service</a>
        {% if CONFIG_VIEW.link.checkout.aup %}and
            <a href="{{ CONFIG_VIEW.link.checkout.aup }}" target="_blank">Acceptable Use Policy</a>{% endif %}
    </label>
</div>
{% endif %}
{% if CONFIG_VIEW.link.checkout.no_refund %}
<div class="checkbox checkbox-primary checkbox-lg no-refund-page hide">
    <input type="checkbox" id="checkbox-no-refund" />
    <label for="checkbox-no-refund">
        I have read and agree to the <a href="{{ CONFIG_VIEW.link.checkout.no_refund }}" target="_blank">No Refund Policy</a>
    </label>
</div>
{% endif %}
{% if noSpaceAfter is not defined and
(CONFIG_VIEW.link.checkout.tos or CONFIG_VIEW.link.checkout.no_refund) %}
    <br>
{% endif %}